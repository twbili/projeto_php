{{ form_start(form) }}

<button class="btn btn-primary mt-3 mb-3">{{ button_label|default('Save') }}</button>
<br>
<div class="row">
    <div class = "col col-6">
        <label for={{ form.name.vars.id }} class="form-label mt-3 ">Nome </label>
        {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
    </div>

</div>
<div class = "col col-6">
    <label for={{ form.imageFile.vars.id }} class="form-label mt-3 ">Image </label>
    {{ form_widget(form.imageFile) }}
    {% if image.imageFile is not empty %}
        <img class="mt-3" src="{{ vich_uploader_asset(image,'imageFile') }}" width="150">
    {% endif %}
</div>

{{ form_end(form) }}
