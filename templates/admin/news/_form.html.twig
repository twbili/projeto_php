{{ form_start(form) }}
<button class="btn btn-primary mt-3 mb-3">{{ button_label|default('Save') }}</button>
<br>
<div class="row">
    <div class = "col col-6">
        <label for={{ form.category.vars.id }} class="form-label mt-3 ">Categoria </label>
        {{ form_widget(form.category,{'attr':{'class':'form-control'}}) }}
    </div>
    <div class = "col col-6">
        <label for={{ form.highlighted.vars.id }} class="form-label mt-3 ">highlighted </label>
        {{ form_widget(form.highlighted,{'attr':{'class':'form-control'}}) }}
    </div>

</div>
<div class="row">
    <div class = "col col-6">
        <label for={{ form.status.vars.id }} class="form-label mt-3 ">status </label>
        {{ form_widget(form.status,{'attr':{'class':'form-control'}}) }}
    </div>
    <div class = "col col-6">
        <label for={{ form.date.vars.id }} class="form-label mt-3 ">data </label>
        {{ form_widget(form.date,{'attr':{'class':'form-control'}}) }}
    </div>

</div>
<div class="row">
    <div class = "col col-6">
        <label for={{ form.title.vars.id }} class="form-label mt-3 ">title </label>
        {{ form_widget(form.title,{'attr':{'class':'form-control'}}) }}
    </div>
    <div class = "col col-6">
        <label for={{ form.shortDescription.vars.id }} class="form-label mt-3 ">shortDescription </label>
        {{ form_widget(form.shortDescription,{'attr':{'class':'form-control'}}) }}
    </div>

</div>
<div>
    <label for={{ form.youtueVideoCode.vars.id }} class="form-label mt-3 ">youtueVideoCode </label>
    {{ form_widget(form.youtueVideoCode,{'attr':{'class':'form-control'}}) }}
</div>

<div>
    <label for={{ form.fullDesxription.vars.id }} class="form-label mt-3 ">fullDesxription </label>
    {{ form_widget(form.fullDesxription,{'attr':{'class':'form-control'}}) }}
</div>

<div class = "col col-6">
    <label for={{ form.imageFile.vars.id }} class="form-label mt-3 ">Image </label>
    {{ form_widget(form.imageFile) }}
    {% if news.imageFile is not empty %}
        <img class="mt-3" src="{{ vich_uploader_asset(news,'imageFile') }}" width="150">
    {% endif %}
</div>



{{ form_end(form) }}
